modules = ["nodejs-20", "python-3.11"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Chrome Extension Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "chrome_extension_test"

[[workflows.workflow]]
name = "Chrome Extension Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 -m http.server 5000"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "chrome_extension_test"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "google-chrome --load-extension=. --new-window"

[[ports]]
localPort = 5000
externalPort = 80
