{
  "manifest_version": 3,
  "name": "bosch studio hercules",
  "version": "1.0.0",
  "description": "Automate Gmail follow-up sequences with backend OAuth authentication",
  "permissions": ["storage", "activeTab", "sidePanel", "alarms"],
  "host_permissions": ["http://localhost:3000/*", "https://localhost:3000/*"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "bosch studio hercules",
    "default_icon": {
      "16": "icons/icon16.svg",
      "32": "icons/icon32.svg",
      "48": "icons/icon48.svg",
      "128": "icons/icon128.svg"
    }
  },
  "icons": {
    "16": "icons/icon16.svg",
    "32": "icons/icon32.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.svg"
  }
}
